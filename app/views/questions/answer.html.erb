<div class="container">
  <% if @ask.present? %>
    <div class="ask">
      <p><%=@ask%></p>
      <p class="type">- You</p>
    </div>
    <div class="answer">
      <p><%=@answer%></p>
      <p class="type">- Your coach</p>
    </div>
  <% else %>
    <p>No ask</p>
  <% end %>

  <%=link_to 'Ask a new question', ask_path %>
</div>